pipeline {
    agent none  // No agent at the top level, global agent

    stages {
        stage('Build') {
            agent {
                docker {
                    image 'abhishekf5/maven-abhishek-docker-agent:v1'
                    args '--user root -v /var/run/docker.sock:/var/run/docker.sock'  // Mount Docker socket
                }
            }
}
}
}
