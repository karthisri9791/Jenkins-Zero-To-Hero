pipeline {
    agent {
        label 'docker-node'  // Run pipeline on a node labeled 'docker-node'
    }
    
    stages {
        stage('Build in Docker') {
            steps {
                script {
                    // Running Docker container in this stage
                    docker.image('abhishekf5/maven-abhishek-docker-agent:v1').inside('--user root -v /var/run/docker.sock:/var/run/docker.sock') {
                        // Your build steps go here inside the Docker container
                        echo "Building inside the Docker container"
                        sh 'mvn clean install'  // Example Maven build step
                    }
                }
            }
        }
    }
}
